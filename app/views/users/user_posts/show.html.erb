<div class="row">
  <div class="col-9">
    <div class="card">
      <div class="card-header bg-transparent">
        <%= image_tag('beer_pen.png', class: 'img-fluid', width: '30', height: '30') %>
<!--        TODO: Decorator-->
        <%= '@' + @post.user.url_name %>
        <% if @post.user.id == current_user&.id %>
          <%= @post.created_at %>
          <%= '100 views' %>
          <%= link_to '編集する', edit_post_path(id: @post.id) %>
          <!--          TODO: fontawesome-->
          <div class="btn-group float-right">
            <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu dropdown-menu-lg-right">
              <h6 class="dropdown-header pl-2">記事の情報</h6>
              <button type="button" class="dropdown-item">編集履歴</button>
              <button type="button" class="dropdown-item">編集リクエスト一覧</button>
              <button type="button" class="dropdown-item">いいねしたユーザ一覧</button>
              <button type="button" class="dropdown-item">Markdownで本文を見る</button>
              <div class="dropdown-divider"></div>
              <button type="button" class="dropdown-item">削除</button>
            </div>
          </div>
        <% else %>
<!--          TODO: I18n-->
          <%= @post.updated_at %>
<!--          TODO: fontawesome-->
          <div class="btn-group float-right">
            <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu dropdown-menu-lg-right">
              <h6 class="dropdown-header pl-2">記事の改善</h6>
              <button type="button" class="dropdown-item">編集リクエストを送る</button>
              <div class="dropdown-divider"></div>
              <h6 class="dropdown-header pl-2">記事の情報</h6>
              <button type="button" class="dropdown-item">編集履歴</button>
              <button type="button" class="dropdown-item">編集リクエスト一覧</button>
              <button type="button" class="dropdown-item">いいねしたユーザ一覧</button>
              <button type="button" class="dropdown-item">Markdownで本文を見る</button>
              <div class="dropdown-divider"></div>
              <button type="button" class="dropdown-item">問題がある記事を報告する</button>
            </div>
          </div>
        <% end %>
        <h1>
          <%= @post.title %>
        </h1>
        <ul class="list-inline">
          <% %w(Ruby Rails RSpec).each do |tag| %>
            <li class="list-inline-item">
              <span class="badge badge-light"><a href="#" class="text-dark font-weight-normal"><%= tag %></a></span>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="card-body">
        <table class="mt-3">
          <tbody>
          <%= @post.content %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-3">
    <div class="card">
      <div class="card-header">
        右側
      </div>
      <div class="card-body">
        何かいい感じのコンテンツ
      </div>
    </div>
  </div>
</div>
